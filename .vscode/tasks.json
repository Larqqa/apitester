{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "ui:dev",
      "type": "shell",
      "isBackground": true,
      "problemMatcher": [
        {
          "owner": "typescript",
          "source": "Typescript",
          "fileLocation": "absolute",
          "applyTo": "allDocuments",
          "background": {
            "activeOnStart": true,
            "beginsPattern": "sd",
            "endsPattern": " > "
          },
          "pattern": [
            {
              "regexp": "(ERROR|WARNING)\\(TypeScript\\)  (.*)",
              "severity": 1,
              "message": 2
            },
            {
              "regexp": "^ FILE  (.*):(\\d*):(\\d*)$",
              "file": 1,
              "line": 2,
              "column": 3
            }
          ]
        },
      ],
      "command": "npm",
      "args": [
        "run",
        "dev"
      ]
    }
  ]
}